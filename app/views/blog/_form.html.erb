<% case url %>
<% when :new then
     path=blog_index_path %>
<% when :edit then
     path=  url_for(controller: :blog, action: :update, id: @blog.id) %>
<% end %>
<%= form_for(@blog, url: path, html: {multipart: true}) do |b| %>
    <div class="field">
      <%= b.label :title %><br>
      <%= b.text_field :title %>
    </div>
    <div class="field">
      <%= b.label :content %><br>
      <%= b.text_area :content, class: :summernote %>
    </div>
    <div class="field">
      <input name="post[user_id]" id="post_user_id" value="<%= current_user.id unless current_user.nil? %>" type="hidden">
    </div>
    <div class="actions">
      <%= b.submit '저장' %>
    </div>
<% end %>