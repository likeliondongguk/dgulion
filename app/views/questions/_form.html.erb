<% case url %>
<% when :new then
     path=questions_path %>
<% when :edit then
     path= url_for(controller: :questions, action: :update, id: @question.id) %>
<% end %>

<%= form_for(@question, url: path, html: {multipart: true}) do |f| %>
    <div class="panel-body">

      <label>제목</label>
      <%= f.text_field :title, class: "form-control" %>
      <br>
      <label>태그</label>
      <%#= select_tag('post[tag]', options_for_select([ ['school', "school"], ['non-profit', "non-profit"]] ), {multiple: true,class: "select2", style: "width: 100%"}) %>
      <select class="select2" name="post[tag][]" multiple="multiple" style="width: 100%">
        <option value="RUBY">ruby</option>
        <option value="RAILS">rails</option>
      </select>
      <br>
      <br>
      <label>본문</label>
      <%= f.text_area :content, class: :summernote %>
      <br>
    </div>
    <div class="panel-footer text-right">
      <%= f.submit class: "btn btn-success" %>
    </div>


<% end %>
