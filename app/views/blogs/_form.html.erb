<% case url %>
<% when :new then
     path=blogs_path %>
<% when :edit then
     path=  url_for(controller: :blogs, action: :update, id: @blog.id) %>
<% end %>
<%= form_for(@blog, url: path, html: {multipart: true}) do |b| %>
    <div class="field">
      <%= b.label :title %><br>
      <%= b.text_field :title %>
    </div>
    <div class="field">
      <%= b.label :content %><br>
      <%= b.text_area :content, class: :summernote %>
    </div>
    <div class="actions">
      <%= b.submit '저장' %>
    </div>
<% end %>