<% case url %>
<% when :new then
     path=url_for(controller: :submissions, action: :create)%>

<% when :create then
     path=submissions_create_path %>

<% when :edit then

     path=  url_for(controller: :submissions, action: :update, id: @submission.id) %>

<% end %>
<%= form_for(@submission, url: path, html: {multipart: true}) do |b| %>
    <div class="field">
      <%= b.label :title %><br>
      <%= b.text_field :title %>
    </div>
    <div class="field">
      <%= b.label :content %><br>
      <%= b.text_area :content, class: :summernote %>
    </div>

    <!-- Need to set up devise by getting pull through jongwon's part-->
    <div class="field">
      <!--<input name="submission[user_id]" id="submission_user_id" value="" type="hidden"> -->
    </div>
    <br>
    <div>
      <%= b.file_field :image %>
    </div>
    <br>
    <div class="actions">
      <%= b.submit '저장'%>
    </div>
<% end %>