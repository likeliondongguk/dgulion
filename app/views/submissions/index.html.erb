<div id="wrapper">

  <%= render partial: "sticky/mainMenu" %>
  <%= render "sticky/pageHeader", name: "Submission index" %>

  <section>
    <div class="container">



     <%if action_name=="index" %>
           <!--real search -->
          <div class="inline-search clearfix margin-bottom-10 ui-widget">
          <%= form_tag(task_submissions_path, :method => "get") do %>
            <%= text_field_tag :search, params[:search], id: 'search-form', placeholder: "Search Posts" %>
            <%= submit_tag "Search" %>
          <% end %>
          </div>
      <% else %>
          <div class="inline-search clearfix margin-bottom-10 ui-widget">
            <%= form_tag(other_path, :method => "get") do %>
                <%= text_field_tag :search, params[:search], id: 'search-form', placeholder: "Search Posts" %>
                <%= submit_tag "Search" %>
            <% end %>
          </div>
     <%end%>


      <div class="clearfix margin-bottom-20 text-right">
        <%unless action_name== 'other' %>
          <%= link_to '<span>New Submission</span>'.html_safe, url_for(controller: :submissions, action: :new, task_id: @task.id), class: "btn btn-success" %>
        <%end%>
        <%= link_to '<span>Back to TaskList</span>'.html_safe, url_for(tasks_path), class: "btn btn-warning" %>
      </div>
      <!-- /real search -->

      <!-- /INLINE SEARCH -->


      <!-- Search result-->
      <% if @submissions.present? %>
          <%= @submissions %>
      <% else %>
