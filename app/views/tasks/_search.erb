<script>
    $( function() {
        var availableTags = [
            <% @tasks.each do |p| %>
            "<%= p.title %>",
            "<%= p.content %>",
            <% end %>
        ];
        $( "#search-form" ).autocomplete({
            source: availableTags
        });
    } );
</script>