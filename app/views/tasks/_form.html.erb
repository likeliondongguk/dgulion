<% case url %>
<% when :new then
     path=url_for(controller: :tasks, action: :create)%>
<% when :create then
     path=tasks_create_path %>
<% when :edit then
     path=  url_for(controller: :tasks, action: :update, id: @task.id) %>
<% end %>
<%= form_for(@task, url: path, html: {multipart: true}) do |b| %>
    <div class="panel-body">
      <label>과제 이름</label>
      <%= b.text_field :title, class: 'form-control' %>
      <br>
      <label>과제 내용</label>
      <%= b.text_area :content, class: :summernote %>
    </div>
    <div class="panel-footer text-right">
      <%= b.submit '저장', class: "btn btn-success" %>
    </div>
<% end %>